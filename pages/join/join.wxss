page {
  background: #f3f3f3;
}

.banner {
  width: 100%;
  height: 340rpx;
}

.block{
  background: #fff;
  margin-top: 15rpx
}

.block-title{ 
  position: relative;
  font-size: 34rpx;
  color:#2e5e86;
  line-height:1.5;
  text-indent: 40rpx;
  padding: 10rpx 20rpx;
}

.block-title::after{
  background: #2e5e86;
  height: 40rpx;
  width: 10rpx;
  content: "";
  top: 15rpx;
  left: 20rpx;
  position: absolute
}
